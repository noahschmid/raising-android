<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_profile_information_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.fragments.registration.investor.RegisterInvestorInformationFragment">

    <TextView
        android:id="@+id/text_profile_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/inputFormInformationTextMargin"
        android:layout_marginBottom="@dimen/inputFormInformationTextMargin"
        android:hint="@string/register_profile_information_text"
        android:textSize="@dimen/fragmentTitleFontSize"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/register_profile_company"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_profile_company"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/inputFormHorizontalMargin"
        android:layout_marginEnd="@dimen/inputFormHorizontalMargin"
        android:layout_marginBottom="@dimen/inputFormVerticalMargin"
        android:hint="@string/register_profile_company"
        app:layout_constraintBottom_toTopOf="@+id/register_profile_website"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_profile_information">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_input_profile_company"
            android:layout_width="match_parent"
            android:layout_height="@dimen/inputFormHeight" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_profile_website"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/inputFormVerticalMargin"
        android:hint="@string/register_profile_website"
        app:layout_constraintBottom_toTopOf="@+id/register_profile_street"
        app:layout_constraintEnd_toEndOf="@+id/register_profile_company"
        app:layout_constraintStart_toStartOf="@+id/register_profile_company"
        app:layout_constraintTop_toBottomOf="@+id/register_profile_company">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_input_profile_website"
            android:layout_width="match_parent"
            android:layout_height="@dimen/inputFormHeight" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_profile_street"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/inputFormVerticalMargin"
        android:hint="@string/register_profile_street"
        app:layout_constraintBottom_toTopOf="@+id/register_profile_zip"
        app:layout_constraintEnd_toEndOf="@+id/register_profile_company"
        app:layout_constraintStart_toStartOf="@+id/register_profile_company"
        app:layout_constraintTop_toBottomOf="@+id/register_profile_website">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_input_profile_street"
            android:layout_width="match_parent"
            android:layout_height="@dimen/inputFormHeight" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_profile_zip"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/inputFormVerticalMargin"
        android:hint="@string/register_profile_zip"
        app:layout_constraintBottom_toTopOf="@+id/register_profile_city"
        app:layout_constraintEnd_toEndOf="@+id/register_profile_company"
        app:layout_constraintStart_toStartOf="@+id/register_profile_company"
        app:layout_constraintTop_toBottomOf="@+id/register_profile_street">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_input_profile_zip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/inputFormHeight" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_profile_city"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/inputFormVerticalMargin"
        android:hint="@string/register_profile_city"
        app:layout_constraintBottom_toTopOf="@+id/register_profile_country"
        app:layout_constraintEnd_toEndOf="@+id/register_profile_company"
        app:layout_constraintStart_toStartOf="@+id/register_profile_company"
        app:layout_constraintTop_toBottomOf="@+id/register_profile_zip">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_input_profile_city"
            android:layout_width="match_parent"
            android:layout_height="@dimen/inputFormHeight" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_profile_country"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/inputFormVerticalMargin"
        android:hint="@string/register_profile_country"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/register_profile_company"
        app:layout_constraintStart_toStartOf="@+id/register_profile_company"
        app:layout_constraintTop_toBottomOf="@+id/register_profile_city">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_input_profile_country"
            android:layout_width="match_parent"
            android:layout_height="@dimen/inputFormHeight" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button_profile_information"
        android:layout_width="0dp"
        android:layout_height="@dimen/authenticationButtonHeight"
        android:layout_marginBottom="@dimen/inputFormVerticalMargin"
        android:hint="@string/register_button_text"
        android:textSize="@dimen/buttonFontSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/register_profile_company"
        app:layout_constraintStart_toStartOf="@+id/register_profile_company" />

</androidx.constraintlayout.widget.ConstraintLayout>