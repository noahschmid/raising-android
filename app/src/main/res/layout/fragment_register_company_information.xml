<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_company_information_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.fragments.registration.startup.RegisterCompanyInformationFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_company_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/inputFormInformationTextMargin"
                android:layout_marginBottom="@dimen/inputFormInformationTextMargin"
                android:hint="@string/register_company_information_text"
                android:textSize="@dimen/fragmentTitleFontSize"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/register_company_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintVertical_chainStyle="packed" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_company_name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/inputFormHorizontalMargin"
                android:layout_marginEnd="@dimen/inputFormHorizontalMargin"
                android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                android:hint="@string/register_profile_company"
                app:layout_constraintBottom_toTopOf="@+id/register_company_uid"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_company_information">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_input_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/inputFormHeight" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_company_uid"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                android:hint="@string/register_company_uid"
                app:layout_constraintBottom_toTopOf="@+id/register_company_revenue"
                app:layout_constraintEnd_toEndOf="@+id/register_company_name"
                app:layout_constraintStart_toStartOf="@+id/register_company_name"
                app:layout_constraintTop_toBottomOf="@+id/register_company_name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_input_company_uid"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/inputFormHeight" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_company_revenue"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                android:hint="@string/register_company_revenue"
                app:layout_constraintBottom_toTopOf="@+id/register_company_breakeven"
                app:layout_constraintEnd_toEndOf="@+id/register_company_name"
                app:layout_constraintStart_toStartOf="@+id/register_company_name"
                app:layout_constraintTop_toBottomOf="@+id/register_company_uid">

                <AutoCompleteTextView
                    android:id="@+id/register_input_company_revenue"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/inputFormHeight"
                    android:dropDownHeight="@dimen/dropDownHeight" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_company_breakeven"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                android:hint="@string/register_company_breakeven"
                app:layout_constraintBottom_toTopOf="@+id/register_company_fte"
                app:layout_constraintEnd_toEndOf="@+id/register_company_name"
                app:layout_constraintStart_toStartOf="@+id/register_company_name"
                app:layout_constraintTop_toBottomOf="@+id/register_company_revenue">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_input_company_breakeven"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/inputFormHeight" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_company_fte"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                android:hint="@string/register_company_fte"
                app:layout_constraintBottom_toTopOf="@+id/register_company_markets"
                app:layout_constraintEnd_toEndOf="@+id/register_company_name"
                app:layout_constraintStart_toStartOf="@+id/register_company_name"
                app:layout_constraintTop_toBottomOf="@+id/register_company_breakeven">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_input_company_fte"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/inputFormHeight" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_company_markets"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                android:hint="@string/register_company_markets"
                app:layout_constraintBottom_toBottomOf="@id/register_company_founding_year"
                app:layout_constraintEnd_toEndOf="@+id/register_company_name"
                app:layout_constraintStart_toStartOf="@+id/register_company_name"
                app:layout_constraintTop_toBottomOf="@+id/register_company_fte">

                <MultiAutoCompleteTextView
                    android:id="@+id/register_input_company_markets"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/inputFormHeight"
                    android:dropDownHeight="@dimen/dropDownHeight" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_company_founding_year"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                android:hint="@string/register_company_founding_year"
                app:layout_constraintBottom_toTopOf="@+id/button_company_information"
                app:layout_constraintEnd_toEndOf="@+id/register_company_name"
                app:layout_constraintStart_toStartOf="@+id/register_company_name"
                app:layout_constraintTop_toBottomOf="@+id/register_company_markets">

                <AutoCompleteTextView
                    android:id="@+id/register_input_company_founding_year"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/inputFormHeight"
                    android:dropDownHeight="@dimen/dropDownHeight" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/button_company_information"
                android:layout_width="0dp"
                android:layout_height="@dimen/authenticationButtonHeight"
                android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                android:hint="@string/register_button_text"
                android:textSize="@dimen/buttonFontSize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/register_company_name"
                app:layout_constraintStart_toStartOf="@+id/register_company_name" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
