<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stakeholder_board_member"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.fragments.registration.helper.BoardMemberInputFragment">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_add_board_member_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/inputFormInformationTextMargin"
                android:layout_marginBottom="@dimen/inputFormInformationTextMargin"
                android:hint="@string/register_stakeholder_board_member_information_text"
                android:textSize="@dimen/fragmentTitleFontSize"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/board_member_first_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintVertical_chainStyle="packed" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/board_member_first_name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/inputFormHorizontalMargin"
                android:layout_marginEnd="@dimen/inputFormHorizontalMargin"
                android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                android:hint="@string/register_stakeholder_first_name"
                app:layout_constraintBottom_toTopOf="@+id/board_member_last_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_add_board_member_information">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_board_member_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/inputFormHeight" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/board_member_last_name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                android:hint="@string/register_stakeholder_last_name"
                app:layout_constraintBottom_toTopOf="@+id/board_member_profession"
                app:layout_constraintEnd_toEndOf="@+id/board_member_first_name"
                app:layout_constraintStart_toStartOf="@+id/board_member_first_name"
                app:layout_constraintTop_toBottomOf="@+id/board_member_first_name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_board_member_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/inputFormHeight" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/board_member_profession"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                android:hint="@string/register_stakeholder_profession"
                app:layout_constraintBottom_toTopOf="@+id/board_member_position"
                app:layout_constraintEnd_toEndOf="@+id/board_member_last_name"
                app:layout_constraintStart_toStartOf="@+id/board_member_last_name"
                app:layout_constraintTop_toBottomOf="@+id/board_member_last_name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_board_member_profession"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/inputFormHeight" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/board_member_position"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                android:hint="@string/register_stakeholder_position"
                app:layout_constraintBottom_toTopOf="@+id/board_member_member_since"
                app:layout_constraintEnd_toEndOf="@+id/board_member_profession"
                app:layout_constraintStart_toStartOf="@+id/board_member_profession"
                app:layout_constraintTop_toBottomOf="@+id/board_member_profession">

                <AutoCompleteTextView
                    android:id="@+id/input_board_member_position"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/inputFormHeight"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/board_member_member_since"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                android:hint="@string/register_stakeholder_member_since"
                app:layout_constraintBottom_toTopOf="@+id/board_member_education"
                app:layout_constraintEnd_toEndOf="@+id/board_member_position"
                app:layout_constraintStart_toStartOf="@+id/board_member_position"
                app:layout_constraintTop_toBottomOf="@+id/board_member_position">

                <AutoCompleteTextView
                    android:id="@+id/input_board_member_member_since"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/inputFormHeight"
                    android:inputType="numberDecimal"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/board_member_education"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:hint="@string/register_stakeholder_education"
                app:layout_constraintEnd_toEndOf="@+id/board_member_member_since"
                app:layout_constraintStart_toStartOf="@+id/board_member_member_since"
                app:layout_constraintTop_toBottomOf="@+id/board_member_member_since">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_board_member_education"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/inputFormHeight"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/button_cancel_board_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/inputFormHorizontalMarginSmall"
                android:layout_marginTop="@dimen/inputFormVerticalMargin"
                android:hint="@string/cancel_text"
                app:layout_constraintStart_toStartOf="@+id/board_member_education"
                app:layout_constraintTop_toBottomOf="@+id/board_member_education" />

            <Button
                android:id="@+id/button_add_board_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/inputFormVerticalMargin"
                android:layout_marginEnd="@dimen/inputFormHorizontalMarginSmall"
                android:hint="@string/add_text"
                app:layout_constraintEnd_toEndOf="@+id/board_member_education"
                app:layout_constraintTop_toBottomOf="@+id/board_member_education" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>