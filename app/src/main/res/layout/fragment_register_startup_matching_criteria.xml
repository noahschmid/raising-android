<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_matching_criteria_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raising.authentication.fragments.registration.startup.RegisterStartupMatchingCriteriaFragment" >

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_startup_matching_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/inputFormInformationTextMargin"
                android:layout_marginBottom="@dimen/inputFormInformationTextMargin"
                android:hint="@string/register_startup_matching_information_text"
                android:textSize="@dimen/fragmentTitleFontSize"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/text_startup_matching_scope"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/text_startup_matching_scope"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/inputFormHorizontalMarginSmall"
                android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                android:hint="@string/register_startup_matching_scope"
                android:textSize="@dimen/fragmentSubtitleFontSize"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/register_startup_matching_scope"
                app:layout_constraintStart_toStartOf="@+id/register_startup_matching_scope"
                app:layout_constraintTop_toBottomOf="@+id/text_startup_matching_information" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_startup_matching_scope"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/inputFormHorizontalMargin"
                android:layout_marginEnd="@dimen/inputFormHorizontalMargin"
                android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                app:layout_constraintBottom_toTopOf="@+id/register_startup_matching_min_ticket"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_startup_matching_scope">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_input_startup_matching_scope"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/inputFormHeight" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_startup_matching_min_ticket"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/inputFormHorizontalMargin"
                android:layout_marginEnd="@dimen/inputFormHorizontalMargin"
                android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                app:layout_constraintBottom_toTopOf="@+id/register_startup_matching_max_ticket"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/register_startup_matching_scope">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_input_startup_matching_min_ticket"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/inputFormHeight" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_startup_matching_max_ticket"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/inputFormHorizontalMargin"
                android:layout_marginEnd="@dimen/inputFormHorizontalMargin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/register_startup_matching_min_ticket">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_input_startup_matching_max_ticket"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/inputFormHeight" />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
