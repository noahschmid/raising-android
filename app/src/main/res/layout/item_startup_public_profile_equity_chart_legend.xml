<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_legend_investor_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/raisingTextColor"
        android:textSize="@dimen/raisingTextFontSize"
        app:layout_constraintStart_toStartOf="@+id/item_legend_title"
        app:layout_constraintTop_toBottomOf="@+id/item_legend_title" />

    <TextView
        android:id="@+id/item_legend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standardHorizontalMarginSmall"
        android:layout_marginTop="@dimen/standardVerticalMarginSmall"
        android:text="TextView"
        android:textColor="@color/raisingTextColor"
        android:textSize="@dimen/raisingTextFontSize"
        app:layout_constraintStart_toEndOf="@+id/item_legend_color"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/item_legend_color"
        android:layout_width="@dimen/publicProfileEquityLegendColorSize"
        android:layout_height="@dimen/publicProfileEquityLegendColorSize"
        app:layout_constraintBottom_toBottomOf="@+id/item_legend_investor_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_legend_title" />

</androidx.constraintlayout.widget.ConstraintLayout>