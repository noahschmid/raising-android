<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/standardVerticalMargin">

    <TextView
        android:id="@+id/text_startup_founder_education"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center|end"
        android:text="Education"
        style="@style/RaisingText"
        app:layout_constraintBottom_toBottomOf="@+id/text_startup_founder_education_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_startup_founder_education_title" />

    <TextView
        android:id="@+id/text_startup_founder_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position"
        style="@style/RaisingTextBold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_startup_founder_education_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/startup_public_profile_education"
        style="@style/RaisingTextBold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_startup_founder_position" />

    <TextView
        android:id="@+id/text_startup_founder_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Name"
        style="@style/RaisingText"
        app:layout_constraintBottom_toBottomOf="@+id/text_startup_founder_position"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_startup_founder_position" />
</androidx.constraintlayout.widget.ConstraintLayout>