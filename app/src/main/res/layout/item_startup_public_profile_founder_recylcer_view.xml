<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_startup_founder_education"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center|end"
        android:text="Education"
        android:textColor="@color/raisingTextColor"
        android:textSize="@dimen/raisingTextFontSize"
        app:layout_constraintBottom_toBottomOf="@+id/text_startup_founder_education_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_startup_founder_education_title" />

    <TextView
        android:id="@+id/text_startup_founder_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position"
        android:textColor="@color/raisingTextColor"
        android:textSize="@dimen/raisingTextFontSize"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_startup_founder_education_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/startup_public_profile_education"
        android:textColorHint="@color/raisingTextColor"
        android:textSize="@dimen/raisingTextFontSize"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_startup_founder_position" />

    <TextView
        android:id="@+id/text_startup_founder_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Name"
        android:textColor="@color/raisingTextColor"
        android:textSize="@dimen/raisingTextFontSize"
        app:layout_constraintBottom_toBottomOf="@+id/text_startup_founder_position"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_startup_founder_position" />
</androidx.constraintlayout.widget.ConstraintLayout>