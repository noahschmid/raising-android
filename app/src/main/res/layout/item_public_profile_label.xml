<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/public_profile_label_icon"
        android:layout_width="@dimen/publicProfileMatchingInformationIconSize"
        android:layout_height="@dimen/publicProfileMatchingInformationIconSize"
        android:layout_marginStart="@dimen/standardHorizontalMarginSmall"
        android:layout_marginEnd="@dimen/standardHorizontalMarginSmall"
        app:layout_constraintBottom_toTopOf="@+id/public_profile_label_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/public_profile_label_name"
        style="@style/RaisingSmallerText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/public_profile_label_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>