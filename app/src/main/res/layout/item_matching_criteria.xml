<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/matching_criteria_background"
        android:layout_width="@dimen/matchingCriteriaOuterIconSize"
        android:layout_height="@dimen/matchingCriteriaOuterIconSize"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="true"
        android:background="@drawable/criteria_icon_background"
        app:layout_constraintBottom_toTopOf="@+id/matching_criteria_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/matching_criteria_name"
        style="@style/RaisingSmallerText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standardVerticalMarginSmall"
        android:gravity="center"
        android:text="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/matching_criteria_background" />

    <ImageView
        android:id="@+id/matching_criteria_icon"
        android:layout_width="@dimen/matchingCriteriaInnerIconSize"
        android:layout_height="@dimen/matchingCriteriaInnerIconSize"
        app:layout_constraintBottom_toBottomOf="@+id/matching_criteria_background"
        app:layout_constraintEnd_toEndOf="@+id/matching_criteria_background"
        app:layout_constraintStart_toStartOf="@+id/matching_criteria_background"
        app:layout_constraintTop_toTopOf="@+id/matching_criteria_background"
        app:srcCompat="@drawable/btn_public_profile_accept" />
</androidx.constraintlayout.widget.ConstraintLayout>