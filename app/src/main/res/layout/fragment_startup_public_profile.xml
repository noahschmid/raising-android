<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/startup_public_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.profile.StartupPublicProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/startup_gallery_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/text_startup_profile_gallery_image_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/inputFormVerticalMarginSmall"
                    android:text="Index / Index"
                    android:textColor="@color/raisingPrimaryTextColor"
                    android:textSize="@dimen/raisingSmallTextFontSize"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageButton
                    android:id="@+id/button_startup_gallery_previous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/inputFormVerticalMarginSmall"
                    android:background="?android:selectableItemBackground"
                    android:src="@drawable/ic_keyboard_arrow_left_32dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/button_startup_gallery_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/inputFormVerticalMarginSmall"
                    android:background="?android:selectableItemBackground"
                    android:src="@drawable/ic_keyboard_arrow_right_32dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageSwitcher
                    android:id="@+id/startup_public_profile_gallery"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/startup_public_profile_matching_summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/raisingSecondaryDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/startup_gallery_layout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/text_startup_public_profile_matching_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/inputFormHorizontalMargin"
                        android:hint="Percent"
                        android:textColorHint="@color/raisingWhite"
                        android:textSize="@dimen/fragmentTitleFontSize"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/button_startup_public_profile_decline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/inputFormVerticalMarginSmall"
                        android:layout_marginEnd="@dimen/inputFormHorizontalMarginSmall"
                        android:background="@drawable/btn_public_profile_round"
                        android:backgroundTint="@color/raisingWhite"
                        android:src="@drawable/ic_not_interested_40dp"
                        app:layout_constraintBottom_toTopOf="@+id/text_startup_decline"
                        app:layout_constraintEnd_toStartOf="@+id/button_startup_public_profile_accept"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/button_startup_public_profile_accept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/inputFormVerticalMarginSmall"
                        android:layout_marginEnd="@dimen/inputFormHorizontalMarginSmall"
                        android:background="@drawable/btn_public_profile_round"
                        android:backgroundTint="@color/raisingWhite"
                        android:src="@drawable/ic_check_40dp"
                        app:layout_constraintBottom_toTopOf="@+id/text_startup_accept"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_startup_decline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/inputFormVerticalMarginSmall"
                        android:hint="@string/decline_text"
                        android:textColorHint="@color/raisingWhite"
                        android:textSize="@dimen/raisingSmallTextFontSize"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/button_startup_public_profile_decline"
                        app:layout_constraintStart_toStartOf="@+id/button_startup_public_profile_decline"
                        app:layout_constraintTop_toBottomOf="@+id/button_startup_public_profile_decline" />

                    <TextView
                        android:id="@+id/text_startup_accept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/inputFormVerticalMarginSmall"
                        android:hint="@string/accept_text"
                        android:textColorHint="@color/raisingWhite"
                        android:textSize="@dimen/raisingSmallTextFontSize"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/button_startup_public_profile_accept"
                        app:layout_constraintStart_toStartOf="@+id/button_startup_public_profile_accept"
                        app:layout_constraintTop_toBottomOf="@+id/button_startup_public_profile_accept" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/text_startup_public_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/inputFormHorizontalMargin"
                android:layout_marginTop="@dimen/inputFormVerticalMargin"
                android:text="Name"
                android:textSize="@dimen/fragmentTitleFontSize"
                android:textStyle="bold"
                android:textColor="@color/raisingPrimaryTextColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/startup_public_profile_matching_summary" />

            <TextView
                android:id="@+id/text_startup_public_profile_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="@color/raisingPrimaryTextColor"
                android:textSize="@dimen/raisingTextFontSize"
                app:layout_constraintStart_toStartOf="@+id/text_startup_public_profile_name"
                app:layout_constraintTop_toBottomOf="@+id/text_startup_public_profile_name" />

            <TextView
                android:id="@+id/text_startup_public_profile_pitch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/inputFormVerticalMargin"
                android:layout_marginEnd="@dimen/inputFormHorizontalMargin"
                android:text="Pitch"
                android:textColor="@color/raisingPrimaryTextColor"
                android:textSize="@dimen/raisingTextFontSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/text_startup_public_profile_location"
                app:layout_constraintTop_toBottomOf="@+id/text_startup_public_profile_location" />

            <TextView
                android:id="@+id/text_startup_public_profile_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/inputFormVerticalMargin"
                android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                android:hint="@string/public_profile_website"
                android:textColorHint="@color/raisingPrimaryTextColor"
                android:textSize="@dimen/raisingTextFontSize"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/public_profile_matching_criteria"
                app:layout_constraintStart_toStartOf="@+id/text_startup_public_profile_pitch"
                app:layout_constraintTop_toBottomOf="@+id/text_startup_public_profile_pitch" />

           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/public_profile_matching_criteria"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/raisingPrimaryAccent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toTopOf="@id/text_profile_key_figures"
               app:layout_constraintTop_toBottomOf="@+id/text_startup_public_profile_website">

               <TextView
                   android:id="@+id/text_startup_public_profile_matching"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="@dimen/inputFormHorizontalMargin"
                   android:layout_marginTop="16dp"
                   android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                   android:hint="@string/public_profile_matching_title"
                   android:textColorHint="@color/raisingPrimaryTextColor"
                   android:textSize="@dimen/fragmentTitleFontSize"
                   android:textStyle="bold"
                   app:layout_constraintBottom_toTopOf="@+id/text_startup_public_profile_scope"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="@+id/public_profile_matching_criteria" />

               <TextView
                   android:id="@+id/text_startup_public_profile_scope"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/inputFormVerticalMargin"
                   android:layout_marginBottom="@dimen/inputFormVerticalMarginSmall"
                   android:drawableLeft="@drawable/ic_price_tag_24dp"
                   android:drawablePadding="@dimen/inputFormVerticalMarginSmall"
                   android:drawableTint="@color/raisingPrimaryTextColor"
                   android:hint="@string/investor_matching_scope"
                   android:textColorHint="@color/raisingPrimaryTextColor"
                   android:textSize="@dimen/fragmentSubtitleFontSize"
                   android:textStyle="bold"
                   app:layout_constraintBottom_toTopOf="@+id/text_startup_public_profile_scope_title"
                   app:layout_constraintStart_toStartOf="@+id/text_startup_public_profile_matching"
                   app:layout_constraintTop_toBottomOf="@+id/text_startup_public_profile_matching" />

               <TextView
                   android:id="@+id/text_startup_public_profile_scope_title"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:hint="@string/register_financial_scope"
                   android:textColorHint="@color/raisingPrimaryTextColor"
                   android:textSize="@dimen/raisingTextFontSize"
                   android:textStyle="bold"
                   app:layout_constraintStart_toStartOf="@+id/text_startup_public_profile_scope"
                   app:layout_constraintTop_toBottomOf="@+id/text_startup_public_profile_scope"
                   app:layout_constraintBottom_toTopOf="@+id/text_startup_public_profile_min_ticket_title"/>

               <TextView
                   android:id="@+id/text_startup_public_profile_actual_scope"
                   android:layout_width="wrap_content"
                   android:layout_height="0dp"
                   android:layout_marginStart="@dimen/inputFormVerticalMarginSmall"
                   android:text="Scope"
                   android:textColor="@color/raisingPrimaryTextColor"
                   android:textSize="@dimen/raisingTextFontSize"
                   app:layout_constraintBottom_toBottomOf="@+id/text_startup_public_profile_scope_title"
                   app:layout_constraintStart_toEndOf="@+id/text_startup_public_profile_scope_title"
                   app:layout_constraintTop_toTopOf="@+id/text_startup_public_profile_scope_title" />

               <TextView
                   android:id="@+id/text_startup_public_profile_min_ticket_title"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:hint="@string/investor_matching_min_ticket"
                   android:textColorHint="@color/raisingPrimaryTextColor"
                   android:textSize="@dimen/raisingTextFontSize"
                   android:textStyle="bold"
                   app:layout_constraintBottom_toTopOf="@+id/text_startup_public_profile_max_ticket_title"
                   app:layout_constraintStart_toStartOf="@+id/text_startup_public_profile_scope_title"
                   app:layout_constraintTop_toBottomOf="@+id/text_startup_public_profile_scope_title" />
               <TextView
                   android:id="@+id/text_startup_public_profile_min_ticket"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="@dimen/inputFormVerticalMarginSmall"
                   android:text="Min Ticket"
                   android:textColor="@color/raisingPrimaryTextColor"
                   android:textSize="@dimen/raisingTextFontSize"
                   app:layout_constraintBottom_toBottomOf="@+id/text_startup_public_profile_min_ticket_title"
                   app:layout_constraintStart_toEndOf="@+id/text_startup_public_profile_min_ticket_title"
                   app:layout_constraintTop_toTopOf="@+id/text_startup_public_profile_min_ticket_title" />

               <TextView
                   android:id="@+id/text_startup_public_profile_max_ticket_title"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                   android:hint="@string/investor_matching_max_ticket"
                   android:textColorHint="@color/raisingPrimaryTextColor"
                   android:textSize="@dimen/raisingTextFontSize"
                   android:textStyle="bold"
                   app:layout_constraintBottom_toTopOf="@+id/text_startup_public_profile_type_of_investor"
                   app:layout_constraintStart_toStartOf="@+id/text_startup_public_profile_min_ticket_title"
                   app:layout_constraintTop_toBottomOf="@+id/text_startup_public_profile_min_ticket_title" />

               <TextView
                   android:id="@+id/text_startup_public_profile_max_ticket"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="@dimen/inputFormVerticalMarginSmall"
                   android:text="Max Ticket"
                   android:textColor="@color/raisingPrimaryTextColor"
                   android:textSize="@dimen/raisingTextFontSize"
                   app:layout_constraintBottom_toBottomOf="@+id/text_startup_public_profile_max_ticket_title"
                   app:layout_constraintStart_toEndOf="@+id/text_startup_public_profile_max_ticket_title"
                   app:layout_constraintTop_toTopOf="@+id/text_startup_public_profile_max_ticket_title" />

               <TextView
                   android:id="@+id/text_startup_public_profile_type_of_investor"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                   android:hint="@string/investor_matching_investor_type"
                   android:drawableLeft="@drawable/ic_chess_horse_24dp"
                   android:drawableTint="@color/raisingPrimaryTextColor"
                   android:drawablePadding="@dimen/inputFormVerticalMarginSmall"
                   android:textColorHint="@color/raisingPrimaryTextColor"
                   android:textSize="@dimen/fragmentSubtitleFontSize"
                   android:textStyle="bold"
                   app:layout_constraintBottom_toTopOf="@+id/startup_public_profile_investor_type_list"
                   app:layout_constraintStart_toStartOf="@+id/text_startup_public_profile_max_ticket_title"
                   app:layout_constraintTop_toBottomOf="@+id/text_startup_public_profile_max_ticket_title" />

               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/startup_public_profile_investor_type_list"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="@dimen/inputFormHorizontalMargin"
                   android:layout_marginEnd="@dimen/inputFormHorizontalMargin"
                   android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                   app:layout_constraintBottom_toTopOf="@+id/text_startup_public_profile_investment_phase"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/text_startup_public_profile_type_of_investor" />

               <TextView
                   android:id="@+id/text_startup_public_profile_investment_phase"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                   android:hint="@string/investor_matching_phase"
                   android:drawableLeft="@drawable/ic_stairs_24dp"
                   android:drawableTint="@color/raisingPrimaryTextColor"
                   android:drawablePadding="@dimen/inputFormVerticalMarginSmall"
                   android:textColorHint="@color/raisingPrimaryTextColor"
                   android:textSize="@dimen/fragmentSubtitleFontSize"
                   android:textStyle="bold"
                   app:layout_constraintBottom_toTopOf="@+id/startup_public_profile_phase_list"
                   app:layout_constraintStart_toStartOf="@+id/text_startup_public_profile_type_of_investor"
                   app:layout_constraintTop_toBottomOf="@+id/startup_public_profile_investor_type_list" />

               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/startup_public_profile_phase_list"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="@dimen/inputFormHorizontalMargin"
                   android:layout_marginEnd="@dimen/inputFormHorizontalMargin"
                   android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                   app:layout_constraintBottom_toTopOf="@+id/text_startup_public_profile_industry"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/text_startup_public_profile_investment_phase" />

               <TextView
                   android:id="@+id/text_startup_public_profile_industry"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                   android:hint="@string/investor_matching_industry"
                   android:drawableLeft="@drawable/ic_gear_24dp"
                   android:drawableTint="@color/raisingPrimaryTextColor"
                   android:drawablePadding="@dimen/inputFormVerticalMarginSmall"
                   android:textColorHint="@color/raisingPrimaryTextColor"
                   android:textSize="@dimen/fragmentSubtitleFontSize"
                   android:textStyle="bold"
                   app:layout_constraintBottom_toTopOf="@+id/startup_public_profile_industry_list"
                   app:layout_constraintStart_toStartOf="@+id/text_startup_public_profile_investment_phase"
                   app:layout_constraintTop_toBottomOf="@+id/startup_public_profile_phase_list" />

               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/startup_public_profile_industry_list"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:layout_constraintEnd_toEndOf="parent"
                   android:layout_marginEnd="@dimen/inputFormHorizontalMargin"
                   android:layout_marginStart="@dimen/inputFormHorizontalMargin"
                   android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintBottom_toTopOf="@+id/text_startup_public_profile_involvement"
                   app:layout_constraintTop_toBottomOf="@+id/text_startup_public_profile_industry"/>

               <TextView
                   android:id="@+id/text_startup_public_profile_involvement"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                   android:drawableLeft="@drawable/ic_conversation_24dp"
                   android:drawablePadding="@dimen/inputFormVerticalMarginSmall"
                   android:drawableTint="@color/raisingPrimaryTextColor"
                   android:hint="@string/investor_matching_involvement"
                   android:textColorHint="@color/raisingPrimaryTextColor"
                   android:textSize="@dimen/fragmentSubtitleFontSize"
                   android:textStyle="bold"
                   app:layout_constraintBottom_toTopOf="@+id/startup_public_profile_involvement_list"
                   app:layout_constraintStart_toStartOf="@+id/text_startup_public_profile_industry"
                   app:layout_constraintTop_toBottomOf="@+id/startup_public_profile_industry_list" />

               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/startup_public_profile_involvement_list"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="@dimen/inputFormHorizontalMargin"
                   android:layout_marginEnd="@dimen/inputFormHorizontalMargin"
                   android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/text_startup_public_profile_involvement" />
           </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/text_profile_key_figures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/inputFormHorizontalMargin"
                android:layout_marginTop="@dimen/inputFormVerticalMargin"
                android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                android:hint="@string/startup_profile_key_figures"
                android:textColorHint="@color/raisingPrimaryTextColor"
                android:textSize="@dimen/fragmentSubtitleFontSize"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/text_profile_revenue_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/public_profile_matching_criteria"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/text_profile_revenue_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/register_company_revenue"
                android:textColorHint="@color/raisingPrimaryTextColor"
                android:textSize="@dimen/raisingTextFontSize"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/text_profile_breakeven_title"
                app:layout_constraintStart_toStartOf="@+id/text_profile_key_figures"
                app:layout_constraintTop_toBottomOf="@+id/text_profile_key_figures" />

            <TextView
                android:id="@+id/text_profile_revenue"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/inputFormVerticalMarginSmall"
                android:text="TextView"
                android:textColor="@color/raisingPrimaryTextColor"
                android:textSize="@dimen/raisingTextFontSize"
                app:layout_constraintBottom_toBottomOf="@+id/text_profile_revenue_title"
                app:layout_constraintStart_toEndOf="@+id/text_profile_revenue_title"
                app:layout_constraintTop_toTopOf="@+id/text_profile_revenue_title" />

            <TextView
                android:id="@+id/text_profile_breakeven_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/register_company_breakeven"
                android:textColorHint="@color/raisingPrimaryTextColor"
                android:textSize="@dimen/raisingTextFontSize"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/text_profile_founding_year_title"
                app:layout_constraintStart_toStartOf="@+id/text_profile_revenue_title"
                app:layout_constraintTop_toBottomOf="@+id/text_profile_revenue_title" />

            <TextView
                android:id="@+id/text_profile_breakeven"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/inputFormVerticalMarginSmall"
                android:text="TextView"
                android:textColor="@color/raisingPrimaryTextColor"
                app:layout_constraintBottom_toBottomOf="@+id/text_profile_breakeven_title"
                app:layout_constraintStart_toEndOf="@+id/text_profile_breakeven_title"
                app:layout_constraintTop_toTopOf="@+id/text_profile_breakeven_title" />

            <TextView
                android:id="@+id/text_profile_founding_year_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/register_company_founding_year"
                android:textColorHint="@color/raisingPrimaryTextColor"
                android:textSize="@dimen/raisingTextFontSize"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/text_profile_current_markets_title"
                app:layout_constraintStart_toStartOf="@+id/text_profile_breakeven_title"
                app:layout_constraintTop_toBottomOf="@+id/text_profile_breakeven_title" />

            <TextView
                android:id="@+id/text_profile_founding_year"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/inputFormVerticalMarginSmall"
                android:text="TextView"
                android:textColor="@color/raisingPrimaryTextColor"
                android:textSize="@dimen/raisingTextFontSize"
                app:layout_constraintBottom_toBottomOf="@+id/text_profile_founding_year_title"
                app:layout_constraintStart_toEndOf="@+id/text_profile_founding_year_title"
                app:layout_constraintTop_toTopOf="@+id/text_profile_founding_year_title" />

            <TextView
                android:id="@+id/text_profile_current_markets_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/register_company_markets"
                android:textColorHint="@color/raisingPrimaryTextColor"
                android:textSize="@dimen/raisingTextFontSize"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/text_profile_fte_title"
