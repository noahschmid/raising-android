<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/startup_public_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.profile.StartupPublicProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/startup_gallery_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/text_startup_profile_gallery_image_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/inputFormVerticalMarginSmall"
                    android:text="Index / Index"
                    android:textColorHint="@color/raisingPrimaryTextColor"
                    android:textSize="@dimen/raisingSmallTextFontSize"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageButton
                    android:id="@+id/button_startup_gallery_previous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/inputFormHorizontalMarginSmall"
                    android:src="@drawable/ic_keyboard_arrow_left_32dp"
                    android:background="?android:selectableItemBackground"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/button_startup_gallery_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/inputFormHorizontalMarginSmall"
                    android:src="@drawable/ic_keyboard_arrow_right_32dp"
                    android:background="?android:selectableItemBackground"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageSwitcher
                    android:id="@+id/startup_public_profile_gallery"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/startup_public_profile_matching_summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/raisingSecondaryDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/startup_gallery_layout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/text_startup_public_profile_matching_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/inputFormHorizontalMargin"
                        android:hint="Matching Percent"
                        android:textColorHint="@color/raisingWhite"
                        android:textSize="@dimen/fragmentTitleFontSize"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/button_startup_public_profile_decline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Button"
                        app:layout_constraintBottom_toBottomOf="@+id/button_startup_public_profile_accept"
                        app:layout_constraintEnd_toStartOf="@+id/button_startup_public_profile_accept"
                        app:layout_constraintTop_toTopOf="@+id/button_startup_public_profile_accept" />

                    <Button
                        android:id="@+id/button_startup_public_profile_accept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Button"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/text_startup_public_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/inputFormHorizontalMargin"
                android:layout_marginTop="@dimen/inputFormVerticalMargin"
                android:text="Name"
                android:textSize="@dimen/fragmentTitleFontSize"
                android:textStyle="bold"
                android:textColorHint="@color/raisingPrimaryTextColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/startup_public_profile_matching_summary" />

            <TextView
                android:id="@+id/text_startup_public_profile_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColorHint="@color/raisingPrimaryTextColor"
                android:textSize="@dimen/raisingTextFontSize"
                app:layout_constraintStart_toStartOf="@+id/text_startup_public_profile_name"
                app:layout_constraintTop_toBottomOf="@+id/text_startup_public_profile_name" />

            <TextView
                android:id="@+id/text_startup_public_profile_pitch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/inputFormVerticalMargin"
                android:layout_marginEnd="@dimen/inputFormHorizontalMargin"
                android:text="Pitch"
                android:textColorHint="@color/raisingPrimaryTextColor"
                android:textSize="@dimen/raisingTextFontSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/text_startup_public_profile_location"
                app:layout_constraintTop_toBottomOf="@+id/text_startup_public_profile_location" />

            <Button
                android:id="@+id/button_startup_public_profile_website"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/inputFormVerticalMargin"
                android:backgroundTint="@color/raisingWhite"
                android:hint="Button"
                android:shadowColor="@color/raisingWhite"
                android:textColorHint="@color/raisingPrimaryTextColor"
                android:textSize="@dimen/raisingTextFontSize"
                app:layout_constraintStart_toStartOf="@+id/text_startup_public_profile_pitch"
                app:layout_constraintTop_toBottomOf="@+id/text_startup_public_profile_pitch" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/startup_profile_matching"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/inputFormVerticalMargin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_startup_public_profile_website"
                app:layout_constraintBottom_toTopOf="@+id/text_profile_key_figures"/>


            <TextView
                android:id="@+id/text_profile_key_figures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/inputFormHorizontalMargin"
                android:layout_marginTop="@dimen/inputFormVerticalMargin"
                android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                android:hint="@string/startup_profile_key_figures"
                android:textColorHint="@color/raisingPrimaryTextColor"
                android:textSize="@dimen/fragmentSubtitleFontSize"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/text_profile_revenue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/startup_profile_matching"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/text_profile_revenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="@dimen/raisingTextFontSize"
                app:layout_constraintBottom_toTopOf="@+id/text_profile_breakeven"
                app:layout_constraintStart_toStartOf="@+id/text_profile_key_figures"
                app:layout_constraintTop_toBottomOf="@+id/text_profile_key_figures" />

            <TextView
                android:id="@+id/text_profile_breakeven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="@dimen/raisingTextFontSize"
                app:layout_constraintBottom_toTopOf="@+id/text_profile_founding_year"
                app:layout_constraintStart_toStartOf="@+id/text_profile_revenue"
                app:layout_constraintTop_toBottomOf="@+id/text_profile_revenue" />

            <TextView
                android:id="@+id/text_profile_founding_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="@dimen/raisingTextFontSize"
                app:layout_constraintBottom_toTopOf="@+id/text_profile_current_markets"
                app:layout_constraintStart_toStartOf="@+id/text_profile_breakeven"
                app:layout_constraintTop_toBottomOf="@+id/text_profile_breakeven" />

            <TextView
                android:id="@+id/text_profile_current_markets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="@dimen/raisingTextFontSize"
                app:layout_constraintBottom_toTopOf="@+id/text_profile_fte"
                app:layout_constraintStart_toStartOf="@+id/text_profile_founding_year"
                app:layout_constraintTop_toBottomOf="@+id/text_profile_founding_year" />

            <TextView
                android:id="@+id/text_profile_fte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                android:text="TextView"
                android:textSize="@dimen/raisingTextFontSize"
                app:layout_constraintBottom_toTopOf="@+id/text_profile_financial"
                app:layout_constraintStart_toStartOf="@+id/text_profile_current_markets"
                app:layout_constraintTop_toBottomOf="@+id/text_profile_current_markets" />

            <TextView
                android:id="@+id/text_profile_financial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                android:hint="@string/register_financial_information_text"
                android:textColorHint="@color/raisingPrimaryTextColor"
                android:textSize="@dimen/fragmentSubtitleFontSize"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/text_profile_investment_type"
                app:layout_constraintStart_toStartOf="@+id/text_profile_key_figures"
                app:layout_constraintTop_toBottomOf="@+id/text_profile_fte" />

            <TextView
                android:id="@+id/text_profile_investment_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="@dimen/raisingTextFontSize"
                app:layout_constraintBottom_toTopOf="@+id/text_profile_valuation"
                app:layout_constraintStart_toStartOf="@+id/text_profile_financial"
                app:layout_constraintTop_toBottomOf="@+id/text_profile_financial" />

            <TextView
                android:id="@+id/text_profile_valuation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="@dimen/raisingTextFontSize"
                app:layout_constraintBottom_toTopOf="@+id/text_profile_closing_time"
                app:layout_constraintStart_toStartOf="@+id/text_profile_investment_type"
                app:layout_constraintTop_toBottomOf="@+id/text_profile_investment_type" />

            <TextView
                android:id="@+id/text_profile_closing_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="@dimen/raisingTextFontSize"
                app:layout_constraintBottom_toTopOf="@+id/text_profile_completed"
                app:layout_constraintStart_toStartOf="@+id/text_profile_valuation"
                app:layout_constraintTop_toBottomOf="@+id/text_profile_valuation" />

            <TextView
                android:id="@+id/text_profile_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                android:text="TextView"
                android:textSize="@dimen/raisingTextFontSize"
                app:layout_constraintBottom_toTopOf="@+id/text_profile_founders"
                app:layout_constraintStart_toStartOf="@+id/text_profile_closing_time"
                app:layout_constraintTop_toBottomOf="@+id/text_profile_closing_time" />

            <ProgressBar
                android:id="@+id/progress_profile_completed"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/inputFormHorizontalMarginSmall"
                android:progressTint="@color/raisingPrimary"
                app:layout_constraintBottom_toBottomOf="@+id/text_profile_completed"
                app:layout_constraintStart_toEndOf="@+id/text_profile_completed"
                app:layout_constraintTop_toTopOf="@+id/text_profile_completed"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/text_profile_founders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                android:hint="@string/register_stakeholder_founder"
                android:textColorHint="@color/raisingPrimaryTextColor"
                android:textSize="@dimen/fragmentSubtitleFontSize"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/text_profile_board_member"
                app:layout_constraintStart_toStartOf="@+id/text_profile_financial"
                app:layout_constraintTop_toBottomOf="@+id/text_profile_completed" />

            <TextView
                android:id="@+id/text_profile_board_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/inputFormVerticalMargin"
                android:hint="@string/register_stakeholder_board_member"
                android:textColorHint="@color/raisingPrimaryTextColor"
                android:textSize="@dimen/fragmentSubtitleFontSize"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/text_profile_shareholder"
                app:layout_constraintStart_toStartOf="@+id/text_profile_founders"
                app:layout_constraintTop_toBottomOf="@+id/text_profile_founders" />

            <TextView
                android:id="@+id/text_profile_shareholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/register_stakeholder_shareholder"
                android:textColorHint="@color/raisingPrimaryTextColor"
                android:textSize="@dimen/fragmentSubtitleFontSize"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/text_profile_board_member"
                app:layout_constraintTop_toBottomOf="@+id/text_profile_board_member" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>