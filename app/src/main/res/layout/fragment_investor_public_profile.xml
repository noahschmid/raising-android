<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.fragments.profile.InvestorPublicProfileFragment">


    <ImageButton
        android:id="@+id/button_gallery_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_button_add_circle_outline_dark_grey_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/investor_profile_gallery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_gallery_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_button_add_circle_outline_dark_grey_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/investor_profile_gallery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageSwitcher
        android:id="@+id/investor_profile_gallery"
        android:layout_width="0dp"
        android:layout_height="186dp"
        app:layout_constraintEnd_toStartOf="@+id/button_gallery_next"
        app:layout_constraintStart_toEndOf="@+id/button_gallery_previous"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- app:layout_constraintBottom_toTopOf="@+id/investor_profile_matching_criteria" -->
