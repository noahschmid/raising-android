<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_subscription"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/standardVerticalMargin"
    android:backgroundTint="@color/raisingSecondaryAccent"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/subscription_active_subscription"
            style="@style/RaisingSubtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standardVerticalMargin"
            android:hint="@string/subscription_your_subscriptions"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/subscription_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/subscription_title"
            style="@style/RaisingSubtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standardVerticalMargin"
            android:hint="@string/subscription_three_months"
            app:layout_constraintBottom_toTopOf="@+id/subscription_expiration"
            app:layout_constraintEnd_toEndOf="@+id/subscription_active_subscription"
            app:layout_constraintStart_toStartOf="@+id/subscription_active_subscription"
            app:layout_constraintTop_toBottomOf="@+id/subscription_active_subscription" />

        <TextView
            android:id="@+id/subscription_expiration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/subscription_three_months_price"
            app:layout_constraintBottom_toTopOf="@+id/button_subscribe"
            app:layout_constraintEnd_toEndOf="@+id/subscription_title"
            app:layout_constraintStart_toStartOf="@+id/subscription_title"
            app:layout_constraintTop_toBottomOf="@+id/subscription_title" />

        <Button
            android:id="@+id/button_subscribe"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/leadsContactButtonHeight"
            android:layout_marginStart="@dimen/standardHorizontalMarginSmall"
            android:layout_marginTop="@dimen/standardVerticalMarginSmall"
            android:layout_marginBottom="@dimen/standardVerticalMargin"
            android:backgroundTint="@color/raisingSecondary"
            android:hint="@string/subscription_subscribe"
            android:minWidth="0dp"
            android:textColorHint="@color/raisingWhite"
            android:textSize="@dimen/raisingSmallTextFontSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_cancel_subscription"
            app:layout_constraintTop_toBottomOf="@+id/subscription_expiration" />

        <Button
            android:id="@+id/button_cancel_subscription"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/leadsContactButtonHeight"
            android:layout_marginEnd="@dimen/standardHorizontalMarginSmall"
            android:backgroundTint="@color/raisingSecondary"
            android:hint="@string/cancel_text"
            android:minWidth="0dp"
            android:textColorHint="@color/raisingWhite"
            android:textSize="@dimen/raisingSmallTextFontSize"
            app:layout_constraintBottom_toBottomOf="@+id/button_subscribe"
            app:layout_constraintEnd_toStartOf="@+id/button_subscribe"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button_subscribe" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>