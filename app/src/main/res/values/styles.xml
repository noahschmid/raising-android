<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/raisingPrimary</item>
        <item name="colorPrimaryDark">@color/raisingPrimaryDark</item>
        <item name="colorAccent">@color/raisingPrimaryAccent</item>
        <item name="android:navigationBarColor">@color/raisingBlack</item>
    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog.MinWidth" />

    <style name="TextInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="TextInputExposedDropdownMenuTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu" />

    <style name="myProfileButtonStyle">
        <item name="android:layout_height">@dimen/myProfileButtonHeight</item>
        <item name="android:drawableTint">@color/raisingSecondaryDark</item>
        <item name="android:textColorHint">@color/raisingSecondaryDark</item>
        <item name="android:backgroundTint"> @color/raisingSecondaryLight </item>
        <item name="android:gravity">center|start</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="DatePickerStyle" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/raisingPrimaryLight</item>
        <item name="colorPrimary">@color/raisingWhite</item>
        <item name="colorPrimaryDark">@color/raisingPrimaryDark</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerButtonStyle</item>
    </style>

    <style name="DatePickerButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/raisingPrimary</item>
        <item name="background">@color/raisingWhite</item>
    </style>

    <style name="MaterialDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>


    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/ic_bottomsheet_new_background</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="ButtonConfirmRegistration">
        <item name="android:layout_marginBottom">@dimen/standardVerticalMargin</item>
        <item name="android:textSize">@dimen/buttonFontSize</item>
        <item name="android:backgroundTint">@color/raisingPrimaryButton</item>
        <item name="android:textColorHint">@color/raisingButtonTextLight</item>
    </style>

    <style name="FragmentTitle">
        <item name="android:layout_marginTop">@dimen/standardFragmentTitleMargin</item>
        <item name="android:layout_marginBottom">@dimen/standardFragmentTitleMargin</item>
        <item name="android:textSize">@dimen/raisingTitleFontSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/raisingPrimaryTextColor</item>
    </style>

    <style name="PrimaryOutlineButton">
        <item name="strokeWidth">@dimen/outlinedButtonStrokeWidth</item>
        <item name="strokeColor">@color/raisingPrimary</item>
        <item name="android:textSize">@dimen/popupButtonFontSize</item>
        <item name="android:textColorHint">@color/raisingPrimary</item>
        <item name="backgroundTint">@color/raisingWhite</item>
    </style>

    <style name="OutlinedMaterialCardView">
        <item name="cardCornerRadius">2dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/raisingPrimary</item>
    </style>

    <style name="PublicProfileRoundButton">
        <item name="backgroundTint">@color/raisingWhite</item>
        <item name="android:radius">20dp</item>
    </style>
</resources>
