<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog.MinWidth" />

    <style name="TextInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="TextInputExposedDropdownMenuTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu" />

    -<style parent="Theme.Design.Light.BottomSheetDialog" name="DialogStyle">

    <item name="android:windowIsFloating">false</item>

    <item name="android:windowSoftInputMode">adjustResize</item>

</style>


    <style parent="Theme.Design.Light.BottomSheetDialog" name="MaterialDialogStyle">

        <item name="android:windowIsFloating">false</item>

        <item name="android:windowSoftInputMode">adjustResize</item>

        <item name="bottomSheetStyle">@style/AppModalStyle</item>

    </style>


    <style parent="Widget.Design.BottomSheet.Modal" name="AppModalStyle">
        <item name="android:background">@drawable/ic_bottomsheet_new_background</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>
</resources>
