<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/raisingPrimary</item>
        <item name="colorPrimaryDark">@color/raisingPrimaryDark</item>
        <item name="colorAccent">@color/raisingPrimaryAccent</item>
    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog.MinWidth" />

    <style name="TextInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="TextInputExposedDropdownMenuTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu" />

    <style name="ButtonConfirmRegistration">
        <item name="android:layout_marginBottom"> @dimen/inputFormVerticalMargin </item>
        <item name="android:textSize"> @dimen/buttonFontSize </item>
        <item name="android:backgroundTint"> @color/raisingPrimaryButton </item>
        <item name="android:textColorHint"> @color/raisingButtonTextLight </item>
    </style>

    <style name="SubtitleTextWithLeftIcon">
        <item name="android:gravity"> center|start </item>
        <item name="android:layout_marginTop"> @dimen/inputFormVerticalMargin </item>
        <item name="android:layout_marginBottom"> @dimen/inputFormVerticalMarginSmall </item>
        <item name="android:drawablePadding"> @dimen/inputFormVerticalMarginSmall </item>
        <item name="android:drawableTint"> @color/raisingPrimaryTextColor </item>
        <item name="android:textSize"> @dimen/fragmentSubtitleFontSize </item>
        <item name="android:textStyle"> bold </item>
        <item name="android:textColorHint"> @color/raisingPrimaryTextColor </item>
    </style>

    <style name="FragmentTitle">
        <item name="android:layout_marginTop"> @dimen/inputFormInformationTextMargin </item>
        <item name="android:layout_marginBottom"> @dimen/inputFormInformationTextMargin </item>
        <item name="android:textSize"> @dimen/fragmentTitleFontSize </item>
        <item name="android:textStyle"> bold </item>
        <item name="android:textColorHint"> @color/raisingPrimaryTextColor </item>
    </style>

    <style name="RoundIconFloatingButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="fabSize"> mini </item>
        <item name="backgroundTint"> @color/raisingPrimaryLight </item>
        <item name="android:clickable"> true </item>
        <item name="android:focusable"> true </item>
    </style>
    
    <style name="CentralizeImagePopup">
        <item name="android:dropDownHorizontalOffset"> 10dp </item>
        <item name="android:dropDownVerticalOffset"> -20dp </item>
    </style>

</resources>
